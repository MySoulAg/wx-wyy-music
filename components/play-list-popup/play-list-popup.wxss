/* components/play-list-popup/play-list-popup.wxss */
.warp {
  width: 100%;
  height: 95%;
}
.warp .swiper-containter {
  width: 100%;
  height: 100%;
}
.warp .swiper-containter .swiper-item {
  padding: 10rpx;
  box-sizing: border-box;
}
.warp .swiper-containter .swiper-item .swiper-item-box {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 40rpx;
}
.warp .swiper-containter .swiper-item .swiper-item-box .h5 {
  height: 100rpx;
  padding: 0 30rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
}
.warp .swiper-containter .swiper-item .swiper-item-box .h5 .span {
  color: #999;
  margin-left: 10rpx;
}
.warp .swiper-containter .swiper-item .swiper-item-box .noData {
  padding: 0 30rpx;
  height: calc(100% - 200rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul {
  /* padding: 0 30rpx 0 0; */
  height: calc(100% - 200rpx);
  box-sizing: border-box;
  /* overflow-y: scroll;
  overflow-x: hidden; */
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul .li {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul .li .left {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
  align-items: center;
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul .li .left .p {
  max-width: 100%;
  font-size: 32rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul .li .left .span {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
  margin-left: 6rpx;
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul .li .icon {
  padding: 4rpx 30rpx 4rpx 10rpx;
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul .li .activeInon {
  padding-left: 0;
  padding-right: 10rpx;
  color: red;
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul li:last-of-type {
  border-bottom: none;
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul li.active {
  color: red;
}
.warp .swiper-containter .swiper-item .swiper-item-box .ul li.active span {
  color: red;
}
.warp .swiper-containter .swiper-item .swiper-item-box .button {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
}
